# ==============================================
# Chatbot Router 环境变量配置
# ==============================================
# 复制此文件为 .env 并修改配置
# cp .env.example .env

# ----------------------------------------------
# MySQL 数据库配置
# ----------------------------------------------
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=chatbot_router
MYSQL_USER=chatbot
MYSQL_PASSWORD=chatbot123
MYSQL_PORT=3306

# ----------------------------------------------
# Redis 缓存配置
# ----------------------------------------------
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ----------------------------------------------
# Spring Boot 配置
# ----------------------------------------------
SPRING_PROFILES_ACTIVE=prod
BACKEND_PORT=8080

# ----------------------------------------------
# JWT 认证配置
# ----------------------------------------------
# 生产环境请使用强密钥 (至少32字符)
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-key
JWT_EXPIRATION=86400000

# ----------------------------------------------
# NapCat 配置
# ----------------------------------------------
# HTTP API地址 (本地开发使用127.0.0.1，Docker使用host.docker.internal)
NAPCAT_HTTP_URL=http://127.0.0.1:3000
# WebSocket地址 (本地开发使用127.0.0.1，Docker使用host.docker.internal)
NAPCAT_WS_URL=ws://127.0.0.1:3001
# HTTP访问令牌 (从NapCat配置文件中获取)
NAPCAT_HTTP_TOKEN=
# WebSocket访问令牌 (从NapCat配置文件中获取)
NAPCAT_WS_TOKEN=

# ----------------------------------------------
# 前端配置
# ----------------------------------------------
FRONTEND_PORT=80

# ----------------------------------------------
# 监控配置 (可选)
# ----------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
